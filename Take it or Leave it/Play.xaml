        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Take_it_or_Leave_it"
        mc:Ignorable="d"
        Title="Select your main box and keep opening boxes" Height="1000" Width="1500" Background="#FF5B89B8">
    
    <Window.Resources> 
        <Style x:Key="btnNumberStyle" TargetType="Button">
            <Setter Property="Foreground" Value="DodgerBlue" />
            <Setter Property="Background" Value="DodgerBlue" />
            <Setter Property="FontSize" Value="50"/>
        </Style>
        
        <Style x:Key="lblShowStyle" TargetType="Label">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="ExtraBold" />
            <Setter Property="FontSize" Value="50" />
        </Style>
    </Window.Resources>


