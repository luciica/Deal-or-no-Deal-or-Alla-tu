<Window x:Class="Take_it_or_Leave_it.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Take_it_or_Leave_it"
        mc:Ignorable="d"
        Title="Rules" Height="1000" Width="1500" Background="Azure">
    <StackPanel HorizontalAlignment="Center" Height="612" VerticalAlignment="Top" Width="1284" Margin="0,158,0,0" Background="Beige">

        <Image x:Name="rules" Source="/rules.JPG" Height="420"/>

        <Button x:Name="btnStart" Click="BtnStart_Click" Height="200" RenderTransformOrigin="0.5,0.5">

            <Button.Background>
                <ImageBrush ImageSource="/startplaying.JPG" />
            </Button.Background>
        </Button>


    </StackPanel>

</Window>
